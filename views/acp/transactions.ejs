
<div class="container" id="admin-page">
  <aside class="sidenav">
    <%- partial ('menu-side.ejs') %>
  </aside>

  <div class="main-content">
    <div class="head-content">
      <a class="menu-button" href="#">
        <div class="menu-arrow aright text-center">
          <i class="fa fa-chevron-right pull-left"></i>
        </div>
      </a>
      <a class="menu-button" href="#">
        <div class="sr-only menu-arrow aleft text-center">
          <i class="fa fa-chevron-left pull-left"></i>
        </div>
      </a>
      <div class="menu-title">
        <h4><span class="name-param">Transactions</span></h4>
      </div>
    </div>

    <div class="detail-content" id="transaction-page">
      <ul class="breadcrumb">
        <li><a href="/acp"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Transactions</li>

      </ul>


      <div class="container" id="filter-by-date">
        <div class="btn-group">
          <button type="button" class="btn btn-primary"><i class="fa fa-calendar"></i></button>
          <a href="?by=today" type="button" class="btn btn-primary">Today</a>
          <a href="?by=yesterday" type="button" class="btn btn-primary">Yesterday</a>
          <a href="?by=month" type="button" class="btn btn-primary">This month</a>
          <a href="?by=lastmonth" type="button" class="btn btn-primary">Last month</a>
          <a href="/acp/transactions" type="button" class="btn btn-primary">All time</a>
        </div>
        <div class="transaction-report pull-right">
          <span>Pending Amount: <strong class="numer-format">$<%= report.pendingAmount[0].total_amount %></strong></span>
          <span>Available Amount: <strong class="numer-format">$<%= report.availableAmount[0].total_amount %></strong></span>
          <button class="transaction-create btn btn-success">Capture payments</button>


        </div>
      </div>

      <div class="clearfix"></div>


      <table class="table table-hover" id="acp-transaction-table">
        <thead>
        <tr>
          <th>Details</th>
          <th>Date/Time Created</th>
          <th>Batch ID</th>
          <!--<th>Shop</th>-->
          <th>Account Name</th>
          <th>Email</th>
          <!--<th>Payment Method</th>-->
          <th>Orders</th>
          <th>Total Amount</th>
          <th>Download</th>
          <!--<th>Status</th>-->
        </tr>
        </thead>


      </table>
    </div>

  </div>
</div>
